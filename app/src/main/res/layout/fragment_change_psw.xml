<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.pakpobox.cleanpro.ui.login.ChangePSWFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/change_psw_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@mipmap/ic_back_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="254dp"
        android:layout_height="90dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:src="@mipmap/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_psw_toolbar" />

    <TextView
        android:id="@+id/change_psw_tips_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="84dp"
        android:text="@string/login_change_psw_tips"
        android:textColor="@color/textColorPrimaryDark"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/change_psw_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="38dp"
        android:background="@null"
        android:ems="10"
        android:hint="@string/login_password_hint"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@color/textColorPrimaryDark"
        android:textColorHint="@color/textColorEditHint"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_psw_tips_tv" />

    <View
        android:id="@+id/change_psw_line_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorLine_1"
        app:layout_constraintEnd_toEndOf="@+id/change_psw_et"
        app:layout_constraintStart_toStartOf="@+id/change_psw_et"
        app:layout_constraintTop_toBottomOf="@+id/change_psw_et" />

    <Button
        android:id="@+id/change_psw_complete_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_app_blue_btn"
        android:enabled="true"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/app_complete"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/change_psw_line_1"
        app:layout_constraintStart_toStartOf="@+id/change_psw_line_1"
        app:layout_constraintTop_toBottomOf="@+id/change_psw_line_1" />

</android.support.constraint.ConstraintLayout>

