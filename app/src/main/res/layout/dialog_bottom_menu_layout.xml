<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_bottom_menu_first_btn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:textColor="@color/colorPrimary"
            android:background="@android:color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Take New Profile Picture"/>

        <TextView
            android:id="@+id/dialog_bottom_menu_second_btn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="1dp"
            android:textColor="@color/textColorEdit"
            android:background="@android:color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Select Profile Picture"/>

        <TextView
            android:id="@+id/dialog_bottom_menu_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/textColorEdit"
            android:background="@android:color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:text="Cancel"/>

    </LinearLayout>

</LinearLayout>