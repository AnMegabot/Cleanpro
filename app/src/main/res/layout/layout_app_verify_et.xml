<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/shape_app_et_bg">

    <EditText
        android:id="@+id/app_verifycation_et"
        style="@style/AppEdittext"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:hint="@string/login_verifycation"
        android:digits="0123456789"
        android:inputType="numberSigned"/>

    <Button
        android:id="@+id/app_verifycation_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:gravity="center"
        android:enabled="true"
        android:textAllCaps="false"
        android:foreground="?attr/selectableItemBackground"
        android:background="@android:color/transparent"
        android:text="@string/login_getCode"
        android:textColor="@drawable/selector_app_btn_text_color"
        android:textSize="13sp" />
</LinearLayout>